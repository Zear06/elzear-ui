{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "airbnb",
  "rules": {
    "comma-dangle": 0,
    "no-underscore-dangle": 0,
    "jsx-quotes": [
      "error",
      "prefer-single"
    ]
  },
  "settings": {
    "import/extensions": [
      ".js"
    ],
    "import/resolver": {
      "webpack": {
        "config": "config/webpack.config.local.js"
      }
    }
  },
  "plugins": [
    "eslint-plugin-react"
  ]
}
